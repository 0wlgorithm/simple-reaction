{
    "compilerOptions": {
        "target": "es6",
        "outDir": "dist",
        "strictNullChecks": true,
        "module": "commonjs",
        "jsx": "preserve",
        "noUnusedLocals": false,
        "baseUrl": "src",
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "./src/**/*.d.ts"
    ],
    "filesGlob": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}